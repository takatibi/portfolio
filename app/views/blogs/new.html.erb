
<div class="blog-header">
	<%= render "blogs/header",user: @user %>
</div>




<div class="blog-main-new">
	<h1>Blog投稿ページ</h1>
	<div class="blog-new-box">
		<div class="blog-new-form">

			<!-- ブログ投稿フォーム -->
			<div class="blog-new-box">
				<%= form_for(@blog) do |f| %>
				<!-- 投稿失敗時のエラーメッセージ -->
				<div class="error-box">
					<% if @blog.errors.any? %>
					<h2><%= @blog.errors.count %>件のエラーが発生しました。</h2>
					<% @blog.errors.full_messages.each do |error| %>
						<%= error %><br>
					<% end %>
					<% end %>
				</div>

				<div class="blog-new-form-box">
					<div class="blog-num-0" id="image-box__container"></div>
				</div>

				<div>
					<div id="new-image-button" class="new-img-box">
						<div class="new-img">
							<!-- multiple => truedeで配列で送れる。しなかったらデータが上書きされていた -->
							<%= f.file_field :image ,id:"img-file", class:'hidden', :multiple => true %>
							<label for="img-file" class="btn btn-primary">写真選択（10枚まで）</label>
						</div>
					</div>
						<strong>Title</strong><br>
							<%= f.text_field :title, :placeholder => "タイトル名", :size=>"50" %><br>
						<strong>Blog</strong><br>
							<%= f.text_area :body, :placeholder => "本文", :size=>"50x15" %><br>
						<strong>Place</strong><br>
							<%= f.text_field :map, :placeholder => "場所", :size=>"50" %><br>
							<strong>Category</strong><br>
						<%= f.select :category, Blog.categories_i18n.keys.to_a, include_blank: true %>

						<div class="new-form-btn">
							<%= f.submit "Create", id:"submit-btn", class:"btn btn-success" %>
						</div>
				</div>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
























