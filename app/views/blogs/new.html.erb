
<div class="blog-header">
<%= render "blogs/header",user: @user %>
</div>




<!-- 投稿失敗時のエラーメッセージ -->
<div class="error-box">
	<% if @blog.errors.any? %>
		<h2><%= @blog.errors.count %>件のエラーが発生しました。</h2>
				<% @blog.errors.full_messages.each do |error| %>
				<%= error %><br>
			<% end %>
	<% end %>
</div>

<!-- ブログ投稿フォーム -->
<%= form_for(@blog) do |f| %>
<div class="blog-main">
	<h1>Blog投稿ページ</h1>
<div class="new-box">
	<div class="new-form">
		<div class="new-form-box">
				<div class="new-img-box">
				</div>
            <div class="blog-num-0" id="image-box__container">
				<div class="new-img">
					<!-- multiple => truedeで配列で送れる。しなかったらデータが上書きされていた -->
					<%= f.file_field :image ,id:"img-file", :multiple => true %>
				</div>

					<strong>Title</strong><br>
					<%= f.text_field :title, :size=>"55"%><br>
					<strong>Blog</strong><br>
					<%= f.text_area :body, :size=>"55x15" %><br>
					<%= f.select :category, Blog.categories.keys.to_a, include_blank: true %>
					<%#= f.collection_select :race, Race.all, :id, :name, prompt: true, include_blank: true %>

					<div class="new-form-btn">
						<%= f.submit "Create",class:"btn btn-success" %>
					</div>
			</div>
		</div>
	</div>
</div>
</div>
<% end %>
























