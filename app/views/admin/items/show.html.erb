<div class="item-show">

<!-- ヘッダー -->
<div class="admin-header">
	<%= render "admin/items/admin_header" %>
</div>

	<div class="item-show-box">
			<!-- サクセスメッセージ -->
		<% flash.each do |key, value| %>
			<%= content_tag(:div, value, class: "#{key}") %>
		<% end %>

		<div class="item-headline clearfix">
			<h1>商品名: <%= @item.product %></h1>
		</div>

				<table class="table">
					<tr>
						<th>商品画像</th><th>商品説明</th><th>値段（税込）</th><th></th><th></th>
					</tr>

					<tr>
						<td><%= link_to item_path(@item) do %>
								<%= attachment_image_tag @item, :item_image, :fill, 300, 300 ,fallback: "unnamed.gif",size:'300x300' %>
							<% end %>
						</td>
						<td><%= @item.explanation %></td>
							<% total_price = (BigDecimal(@item.price)*(1.1)).ceil %></td>
						<td><%= converting_to_jpy(total_price) %>
						<td><%= link_to "編集画面", edit_admin_item_path(@item), class:"btn btn-primary" %></td>
						<td><%= link_to "削除する", admin_item_path(@item),method: :delete,"data-confirm" => "本当に削除しますか？",class:"btn btn-danger" %></td><br>
					</tr>
				</table>
	</div>
</div>


<div class="item-footer">
</div>






















