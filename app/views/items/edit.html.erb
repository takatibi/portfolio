<div class="item-header">
	<%= render "items/item_header" %>
</div>


<div class="item-new">
	<!-- エラー文 -->
	<div class="error-box">
		<% if @item.errors.any? %>
			<h2><%= @item.errors.count %>件のエラーが発生しました。</h2>
				<% @item.errors.full_messages.each do |error| %>
					<%= error %><br>
				<% end %>
		<% end %>
	</div>

	<h1>商品の編集</h1>


	<%= form_for(@item)do |f| %>

		<%= f.label :"商品画像" %>
		<%= f.attachment_field :item_image, :placeholder => "商品画像" %>


		<%= f.label :"商品名" %><br>
		<%= f.text_field :product, :placeholder => "商品名" %><br>

		<%= f.label :"商品説明" %><br>
		<%= f.text_area :explanation, :placeholder => "商品説明" %><br>

		<%= f.label :"税抜き価格" %><br>
		<%= f.text_field :price, :placeholder => "税抜き価格" %><br>

		<%= f.submit "送信" %>
	<% end %>
</div>